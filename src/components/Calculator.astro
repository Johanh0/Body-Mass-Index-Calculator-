<div class="w-[400px] p-5 bg-white shadow-md rounded-lg">
  <div class="mb-4">
    <p class="font-semibold">Enter your details below</p>
  </div>
  <form action="" class="w-full flex flex-col gap-4">
    <div class="flex gap-24">
      <div class="flex gap-4">
        <input type="radio" name="metric" id="metric" />
        <label for="metric" class="font-bold">Metric</label>
      </div>

      <div class="flex gap-4">
        <input type="radio" name="imperial" id="imperial" />
        <label for="imperial" class="font-bold">Imperial</label>
      </div>
    </div>

    <div class="flex w-full gap-3">
      <div class="w-1/2 flex flex-col gap-3">
        <label for="height" class="text-gray-400 font-light">Height</label>
        <div class="flex items-center border-2 rounded-md p-2">
          <input
            type="text"
            id="height"
            class="w-full outline-none text-heading_m font-semibold placeholder:text-gray-300"
            placeholder="0"
          />
          <p class="text-heading_m px-2 text-primary font-semibold">cm</p>
        </div>
      </div>

      <div class="w-1/2 flex flex-col gap-3">
        <label for="weight" class="text-gray-400 font-light">Weight</label>
        <div class="flex items-center border-2 rounded-md p-2">
          <input
            type="text"
            id="weight"
            class="w-full outline-none text-heading_m font-semibold placeholder:text-gray-300"
            placeholder="0"
          />
          <p class="text-heading_m px-2 text-primary font-semibold">kg</p>
        </div>
      </div>
    </div>
  </form>
</div>
